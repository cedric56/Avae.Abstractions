<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:behavior="using:Example"
			 			 xmlns:i="https://github.com/projektanker/icons.avalonia"

             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Example.FormView">		
			<SplitView DisplayMode="Inline" 
			  OpenPaneLength="150"
			  IsPaneOpen="True">
				<SplitView.Pane>

					<StackPanel
					   Spacing="5"
					   Margin="5" >
						<ListBox
							ItemsSource="{Binding Pages}"
							SelectedItem="{Binding SelectedPage}"
							behavior:PointerWheelChangedBehavior.Command="{Binding OnScrollChanged}">
							<ListBox.Styles>
								<Style Selector="ListBoxItem">
									<Setter Property="Padding" Value="10" />
								</Style>
							</ListBox.Styles>
							<ListBox.ItemTemplate>
								<DataTemplate>
									<StackPanel
										Spacing="10"
										Orientation="Horizontal">
										<i:Icon Value="{Binding Icon}"/>
										<TextBlock Text="{Binding DisplayName}" />
									</StackPanel>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</StackPanel>
				</SplitView.Pane>
				<SplitView.Content>
					<Grid RowDefinitions="Auto, *">
						<TextBlock x:Name="tb" Grid.Row="0" Text="{Binding Title}" HorizontalAlignment="Center" Grid.Column="1"/>							
						<Button Content="X" Grid.Row="0" Command="{Binding CloseCommand}" Grid.Column="1" HorizontalAlignment="Right" />
						<TransitioningContentControl Content="{Binding CurrentPage}" Padding="15" Grid.Row="1" />
					</Grid>
				</SplitView.Content>
			</SplitView>
</UserControl>
