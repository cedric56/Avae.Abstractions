<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Example.HomeView">
    <Grid RowDefinitions="Auto,*">
        <TextBlock Text="{Binding Title}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
		    <Button Content="Modal" Command="{Binding ShowModal}" />		
            <Button Content="TaskDialog" Command="{Binding ShowTaskDialog}" />		
        </StackPanel>
        
    </Grid>
    
</UserControl>
